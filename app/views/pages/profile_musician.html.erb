<div row>
  <div class="container text-center">
    <div class="row align-items-center mt-4" id="profile-container">
      <div class="col-6">
        <div class="card" >
          <h1><strong><%= @musician.user.nickname%></h1></strong>
          <p><strong>Gêneros musicias:</strong> <%=@musician.category%></p>
          <p><strong>Descrição:</strong> <%= @musician.description%></p>
          <p><strong>Contato:</strong> <%= @musician.phone%></p>
          <p><strong>Endereço:</strong> <%= @musician.address%></p>

          <% if current_user.musician.photo.attached? %>
          <div id="profile-img">
            <%= cl_image_tag current_user.musician.photo.key, height: 300, width: 400, crop: :fill, style:"border-radius: 20px" %>
            </div>
          <% else %>
            <div id="profile-img">
              <%= image_tag("musician.jpg", height: 300) %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-6">
        <div class="card" >
          <div style="border-radius: 10px; overflow: hidden;">
            <iframe width="600" height="360"
            src="https://www.youtube.com/embed/tgbNymZ7vqY">
            </iframe>
          </div>
        <div id="redes-sociais-links">
          <h4><strong>Redes Sociais</strong></h4>
          <i class="fa-brands fa-facebook"></i>
          <i class="fa-brands fa-instagram"></i>
          <i class="fa-brands fa-spotify"></i>
          <i class="fa-brands fa-youtube"></i>
          <i class="fa-brands fa-soundcloud"></i>
        <div>
        </div>
      </div>
    </div>
  </div>
</div>

<div row>

  <div class="container text-center mt-5 p-5">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="title-color">Pending Proposals</h2>
        <%= "No refused proposals :)" if @pending_proposals.blank?  %>
        <% @pending_proposals.each do |proposal| %>
          <div class="container text-center">
            <div class="row align-items-center">
                <div class="col">
                  <div class="card-product">
                    <div class="card-product-infos">
                      <h5><%= link_to "#{proposal.event.title_event}", event_path(proposal.event) %></h5>
                      <p><strong>Endereço: </strong><%= proposal.event.company.address %></p>
                      <p><strong>Empresa:</strong> <%= proposal.event.company.title %></p>
                    </div>

                    <div class="col">
                      <p><strong>Data Inicio:</strong> <%= proposal.event.start_time.strftime("%d/%m/%y") %></p>
                      <p><strong>Horário:</strong> <%= proposal.event.start_time.strftime("%H:%M") %></p>
                      <p><strong>Data Fim:</strong> <%= proposal.event.start_time.strftime("%d/%m/%y") %></p>
                      <p><strong>Horário:</strong> <%= proposal.event.start_time.strftime("%H:%M") %></p>
                    </div>
                    <div class="col">
                      <%= link_to 'Editar proposta', edit_musician_path(@musician), class:'btn btn-light'%>
