          <% end %>
        </div>
        <div class="card-proposals-infos">
          <h2><%= link_to "#{proposal.event.title_event}", event_path(proposal.event) %></h2>
          <p><strong>Data: </strong> <%= proposal.event.start_time.strftime("%d/%m/%y") %></p>
