<div class="container">
  <%= simple_form_for musician do |f| %>
    <%= f.input :first_name, label: 'Nome', required: true %>
    <%= f.input :last_name, label: 'Sobrenome', required: true %>
    <%= f.input :address, label: 'Endereço' %>
    <%= f.label :category, 'Gêneros Musiciais: ' %>
    <%= f.select :category,  Event::CATEGORIES, {include_blank: false}, { multiple: true, data: {controller: "slim-select"}}%>
    <%= f.input :birth_date, as: :date, label: 'Data de nascimento', required: true, html5: true %>
    <%= f.input :description, label: 'Breve descrição', required: true %>
    <%= f.input :phone, label: 'Celular', required: true %>
    <%= f.input :photo, as: :file %>

    <%= f.submit value: 'Enviar' %>
  <% end %>
</div>
